# Docker环境配置文件
# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=wuhr_ai_ops
DB_USER=wuhr_admin
DB_PASSWORD=wuhr_secure_password_2024
DB_SSL=false

# Connection Pool Settings
DB_MIN_CONNECTIONS=2
DB_MAX_CONNECTIONS=10
DB_INITIAL_CONNECTIONS=2
DB_CONNECTION_TIMEOUT=10000
DB_IDLE_TIMEOUT=300000

# Encryption Settings
ENCRYPTION_KEY=a1b2c3d4e5f6789012345678901234567890abcdef1234567890abcdef123456

# Prisma Database URLs
DATABASE_URL="postgresql://wuhr_admin:wuhr_secure_password_2024@postgres:5432/wuhr_ai_ops?sslmode=disable&connection_limit=10&pool_timeout=20&connect_timeout=10"
DIRECT_URL="postgresql://wuhr_admin:wuhr_secure_password_2024@postgres:5432/wuhr_ai_ops?sslmode=disable&connection_limit=5&pool_timeout=20&connect_timeout=10"

# Application Environment
NODE_ENV=production

# JWT Configuration
JWT_SECRET=wuhr_ai_ops_jwt_secret_2024_production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Redis配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_2024
REDIS_URL=redis://:redis_password_2024@redis:6379

# 日志级别
LOG_LEVEL=info

# 部署配置
DEPLOYMENT_TIMEOUT=300000

# Next.js配置
NEXT_TELEMETRY_DISABLED=1
