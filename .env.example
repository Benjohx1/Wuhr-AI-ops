# Database Configuration
# PostgreSQL connection settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=wuhr_ai_ops
DB_USER=postgres
DB_PASSWORD=your_password_here

# SSL Configuration
DB_SSL=false

# Connection Pool Settings
DB_MAX_CONNECTIONS=10
DB_CONNECTION_TIMEOUT=5000
DB_IDLE_TIMEOUT=30000

# Prisma Database URLs
# Primary connection URL for application usage
DATABASE_URL="postgresql://postgres:your_password_here@localhost:5432/wuhr_ai_ops?sslmode=disable"

# Direct URL for migrations (optional, used for connection pooling)
DIRECT_URL="postgresql://postgres:your_password_here@localhost:5432/wuhr_ai_ops?sslmode=disable"

# Production SSL Example (uncomment and modify for production)
# DB_SSL=true
# DATABASE_URL="postgresql://postgres:your_password_here@localhost:5432/wuhr_ai_ops?sslmode=require"
# DIRECT_URL="postgresql://postgres:your_password_here@localhost:5432/wuhr_ai_ops?sslmode=require"

# Application Environment
NODE_ENV=development

# JWT Configuration (existing)
JWT_SECRET=your_jwt_secret_here
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Git认证配置
# 用于私有仓库的认证信息
GIT_USERNAME=your-git-username
GIT_TOKEN=your-git-token-or-password

# 特定Git平台的认证（可选）
GITHUB_TOKEN=your-github-personal-access-token
GITLAB_TOKEN=your-gitlab-access-token
GITEE_TOKEN=your-gitee-access-token

# SSH密钥路径（可选）
SSH_PRIVATE_KEY_PATH=/path/to/your/ssh/private/key

# 部署配置
DEPLOYMENT_TIMEOUT=300000
DEPLOYMENT_CACHE_DIR=/deployments/code-cache

# Redis配置（用于缓存和会话）
REDIS_URL=redis://localhost:6379

# 日志级别
LOG_LEVEL=info
